<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="students.aalto.org.indoormappingapp.EditBuildingActivity"
    tools:showIn="@layout/activity_edit_building">

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default building"
        android:id="@+id/Textview_buildingName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" /-->

    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default ID"
        android:id="@+id/Textview_buildingID"
        android:layout_below="@+id/Textview_buildingName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" /-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/button_dataset_remove"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_buildingName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Dataset name"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_buildingDesc"
        android:layout_below="@+id/editText_buildingName"
        android:layout_alignRight="@+id/editText_buildingName"
        android:layout_alignEnd="@+id/editText_buildingName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Dataset description"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_buildingUpdate"
        android:layout_below="@+id/editText_buildingDesc"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_map_photo"
        android:id="@+id/button_capturePhoto"
        android:layout_below="@+id/button_buildingUpdate"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
